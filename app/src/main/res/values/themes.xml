<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleDocumentScanner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/open_sans</item>

        <item name="md_color_button_text">@color/colorSecondaryVariant</item>

    </style>

    <style name="AppButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="elevation">0dp</item>
        <item name="rippleColor">@color/color_button_ripple</item>
    </style>

    <style name="App.ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="textAllCaps">true</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>